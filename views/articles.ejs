<!DOCTYPE html>
<html lang="en" ng-app="newsApp">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title ng-bind="news.title"></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular-route.min.js"></script>
  <link rel="stylesheet" href="/css/articles.css">
</head>
<body ng-controller="newsController">
    <%- include('partials/header') %>

    <div>
        <h1 ng-bind="news.title"></h1>
        <img ng-if="news.image_url" ng-src="{{ news.image_url }}" alt="{{ news.title }}" class="img-fluid mb-3">
        <p ng-bind="news.full_article"></p>
        <a href="/news" class="btn btn-secondary">Back to News</a>
    </div>      

    <script src="/angular/newsController.js"></script>
</body>
</html>
