<!DOCTYPE html>
<html lang="en" ng-app="newsApp">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>News</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
  <link rel="stylesheet" href="/css/news.css">
</head>
<body ng-controller="newsController">
    <%- include('partials/header'); %>

  <!-- Sorting Controls -->
  <div class="container mt-4">
    <h1>News</h1>
    <div class="mb-3">
      <label for="sortOrder" class="form-label">Sort by Title:</label>
      <select id="sortOrder" class="form-select" ng-model="sortOrder">
        <option value="title">A-Z</option>
        <option value="-title">Z-A</option>
      </select>
    </div>

    <!-- News List -->
    <div class="news-item" ng-repeat="news in newsList | orderBy:sortOrder">
      <h3><a href="#" ng-click="openArticle(news.id)">{{ news.title }}</a></h3>
      <img ng-if="news.image_url" ng-src="{{ news.image_url }}" alt="{{ news.title }}" class="img-fluid">
      <p>{{ news.content }}</p>
    </div>
  </div>

  <script>
    angular.module('newsApp', [])
      .controller('newsController', function($scope, $http) {
        $scope.newsList = [];
        $scope.sortOrder = 'title'; 

        $http.get('/news/api/news').then(function(response) {
          $scope.newsList = response.data.news;
        });

        $scope.openArticle = function(newsId) {
          console.log('Artikel ID:', newsId);
        };
      });
  </script>
</body>
</html>
